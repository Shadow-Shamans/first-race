root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
tab_width = 2
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[{*.js,*.jsx}]
spaces_around_operators = true
ij_javascript_use_double_quotes = false
ij_javascript_force_quote_style = true
ij_javascript_spaces_within_brackets = true
ij_javascript_spaces_within_imports = true
ij_javascript_spaces_within_interpolation_expressions = true
ij_javascript_use_path_mapping = different_paths

ij_javascript_align_imports = false
ij_javascript_blank_lines_after_imports = 1
ij_javascript_import_merge_members = global
ij_javascript_import_prefer_absolute_path = global
ij_javascript_import_sort_members = true
ij_javascript_import_sort_module_name = false
ij_javascript_import_use_node_resolution = true
ij_javascript_imports_wrap = on_every_item

[{*.ts,*.tsx}]
ij_typescript_use_path_mapping = different_paths
ij_typescript_align_imports = false
ij_typescript_blank_lines_after_imports = 2
ij_typescript_import_merge_members = global
ij_typescript_import_prefer_absolute_path = global
ij_typescript_import_sort_members = true
ij_typescript_import_sort_module_name = false
ij_typescript_import_use_node_resolution = true
ij_typescript_imports_wrap = on_every_item
ij_typescript_spaces_within_imports = true
